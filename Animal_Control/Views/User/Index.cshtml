@model IEnumerable<Animal_Control.Models.AC_Usuario>

@{
    ViewBag.Title = "Lista de Usuarios";
    Layout = "~/Views/Shared/_LayoutTablas.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Lista de Usuarios</h2>

                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">


                            <table id="example-1" class="table table-striped dt-responsive display" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>Correo</th>
                                        <th>Pais</th>
                                        <th>Fecha Ingreso</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.U_ID</td>
                                            <td>@item.Nombre</td>
                                            <td>@item.Correo</td>
                                            <td>@item.Pais</td>
                                            <td>@item.Fecha</td>
                                            <td>
                                                @Html.ActionLink("Editar", "ModificarUsuario", new { id = item.U_ID }) |
                                                @Html.ActionLink("Eliminar", "EliminarUsuario", new { id = item.U_ID })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </section>
        </div>

    </section>
</section>
