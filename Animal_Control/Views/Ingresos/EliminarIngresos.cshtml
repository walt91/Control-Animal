@model Animal_Control.Models.AC_Ingresos
@{
    ViewBag.Title = "Eliminar Ingreso";
    Layout = "~/Views/Shared/_LayoutTablas.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div>
                <h3>Eliminar Ingreso</h3>
                <h5>Quieres borrar este Ingreso?</h5>
                <hr />
                <table cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Dinero</th>
                            <th>Comentario</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>@Model.I_ID </td>
                            <td>₡@Model.Dinero  </td>
                            <td>@Model.Comentario  </td>
                        </tr>
                    </tbody>

                </table>
                <br>
                <br>
                <div class="form-actions no-color">
                    <input type="submit" value="Eliminar Ingreso" class="btn btn-default" />
                    <a href="@Url.Action("Index", "Ingresos")" class="btn btn-default"> Cancelar </a>
                </div>

            </div>
        }
    </section>
</section>