@model IEnumerable<Animal_Control.Models.AC_Vacuna>

@{
    ViewBag.Title = "Reporte Vacunas";
    Layout = "~/Views/Shared/_LayoutTablas.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2>Reporte de Vacunas</h2>

                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">


                            <table id="example-1" class="table table-striped dt-responsive display" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Nombre</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br>

                        </div>
                    </div>
                </div>
            </section>
            <div class="form-group">
                <a class="" href="@Url.Action("DescargarVacunasPDF", "Reportes")">Descargar PDF</a>
            </div>
        </div>
    </section>
</section>




