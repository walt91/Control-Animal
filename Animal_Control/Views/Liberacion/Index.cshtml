@model IEnumerable<Animal_Control.Models.AC_Liberacion>

@{
    ViewBag.Title = "Lista de Animales Liberados";
    Layout = "~/Views/Shared/_LayoutTablas.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Lista de Animales Liberados</h2>

                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">


                            <table id="example-1" class="table table-striped dt-responsive display" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Especie</th>
                                        <th>Sexo</th>
                                        <th>Edad</th>
                                        <th>Condicion</th>
                                        <th>Comentario</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.ID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Especie)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Sexo)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Condicion)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Comentario)</td>
                                            <td>
                                                @Html.ActionLink("Ver Detalle", "Details", new { id = item.ID }) |
                                                @Html.ActionLink("Editar", "ModificarLiberacion", new { id = item.ID }) |
                                                @Html.ActionLink("Eliminar", "EliminarLiberacion", new { id = item.ID })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br>
                </div>
            </section>
        </div>
    </section>
</section>
