@model Animal_Control.Models.AC_Control_Diario

@{
    ViewBag.Title = "Eliminar Control Diario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div>
                <h3>Eliminar Control Diario</h3>
                <h5>Quieres borrar este control?</h5>
                <hr />
                <table cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Comentario</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => Model.CD_ID) </td>
                            <td>@Html.DisplayFor(modelItem => Model.Comentario) </td>
                            <td>@Html.DisplayFor(modelItem => Model.Fecha) </td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <br>
                <div class="form-actions no-color">
                    <input type="submit" value="Eliminar Control Diario" class="btn btn-default" />
                    <input type="submit" href="@Url.Action("Index", "Articulo")" value="Cancelar" class="btn btn-default" />
                </div>

            </div>
        }
    </section>
</section>