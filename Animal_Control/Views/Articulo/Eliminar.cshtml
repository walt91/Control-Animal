@model Animal_Control.Models.AC_Articulo

@{
    ViewBag.Title = "Eliminar Articulo";
    Layout = "~/Views/Shared/_LayoutTablas.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div>
                <h3>Eliminar Articulo</h3>
                <h5>Quieres borrar este articulo?</h5>
                <hr />
                <table cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => Model.A_ID) </td>
                            <td>@Html.DisplayFor(modelItem => Model.Nombre)  </td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <br>
                <div class="form-actions no-color">
                    <input type="submit" value="Eliminar Articulo" class="btn btn-default" />
                    <input type="submit" href="@Url.Action("Index", "Articulo")" value="Cancelar" class="btn btn-default" />
                </div>

            </div>
        }
    </section>
</section>