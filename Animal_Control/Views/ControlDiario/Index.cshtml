@model IEnumerable<Animal_Control.Models.QueryControlDiario>

@{
    ViewBag.Title = "Lista de Controles";
    Layout = "~/Views/Shared/_LayoutTablas.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Lista de Controles</h2>

                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">


                            <table id="example-1" class="table table-striped dt-responsive display" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Animal</th>
                                        <th>Usuario</th>
                                        <th>Comentario</th>
                                        <th>Fecha</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.animal</td>
                                            <td>@item.usuario</td>
                                            <td>@item.comentario</td>
                                            <td>@item.fecha</td>
                                            <td>
                                                @Html.ActionLink("Editar", "ModificarControl_Diario", new { id = item.ID }) |
                                                @Html.ActionLink("Eliminar", "EliminarControl_Diario", new { id = item.ID })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <br>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</section>
