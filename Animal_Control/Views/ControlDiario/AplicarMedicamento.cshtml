@model Animal_Control.Models.AC_Control_Diario

@{
    ViewBag.Title = "AplicarMedicamento";
    Layout = "~/Views/Shared/_LayoutTablas.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>
        <h2>AplicarMedicamento</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>AC_Control_Diario</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ID_Animal, "Animal", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ID_Animal", ViewBag.animal as SelectList)
                        @Html.ValidationMessageFor(model => model.ID_Animal, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ID_Medicamento, "Medicamento", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ID_Medicamento", ViewBag.medicamento as SelectList)
                        @Html.ValidationMessageFor(model => model.ID_Medicamento, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Aplicar Medicamento" class="btn btn-default" />
                        <a href="@Url.Action("Index", "ControlDiario")" class="btn btn-default"> Cancelar </a>
                    </div>
                </div>
            </div>
        }
    </section>
</section>
