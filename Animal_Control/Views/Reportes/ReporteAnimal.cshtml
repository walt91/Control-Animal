@model IEnumerable<Animal_Control.Models.AC_Animal>

@{
    ViewBag.Title = "Lista Animales";
    Layout = "~/Views/Shared/_LayoutTablas.cshtml";
}


<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Reporte de Animales</h2>

                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">


                            <table id="example-1" class="table table-striped dt-responsive display" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Especie</th>
                                        <th>Sexo</th>
                                        <th>Edad</th>
                                        <th>Condicion</th>
                                        <th>Comentario</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Especie</td>
                                            <td>@item.Sexo</td>
                                            <td>@item.Edad</td>
                                            <td>@item.Condicion</td>
                                            <td>@item.Comentario</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br>
                </div>
            </section>
            <div class="form-group">
                <a href="@Url.Action("DescargarAnimalPDF", "Reportes")" class="btn btn-default" >Descargar PDF</a>
            </div>
        </div>
    </section>
</section>
