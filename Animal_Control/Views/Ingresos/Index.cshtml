@model IEnumerable<Animal_Control.Models.QueryIngresos>

@{
    ViewBag.Title = "Lista de Ingresos";
    Layout = "~/Views/Shared/_LayoutTablas.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Lista de Ingresos</h2>

                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">


                            <table id="example-1" class="table table-striped dt-responsive display" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Dinero</th>
                                        <th>Usuario</th>
                                        <th>Comentario</th>
                                        <th>Fecha</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.I_ID</td>
                                            <td>₡@item.Dinero</td>
                                            <td>@item.Usuario</td>
                                            <td>@item.Comentario</td>
                                            <td>@item.Fecha</td>
                                            <td>
                                                @Html.ActionLink("Editar", "ModificarIngresos", new { id = item.I_ID }) |
                                                @Html.ActionLink("Eliminar", "EliminarIngresos", new { id = item.I_ID })
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </section>
        </div>

    </section>
</section>
