@model IEnumerable<Animal_Control.Models.AC_Articulo>

@{
    ViewBag.Title = "Lista de Articulos";
    Layout = "~/Views/Shared/_LayoutTablas.cshtml";
}

<section id="main-content" class=" ">
    <section class="wrapper main-wrapper" style=''>

        <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
            <div class="page-title">

            </div>
        </div>
        <div class="clearfix"></div>

        <div class="col-lg-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">Lista de Articulos</h2>

                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">


                            <table id="example-1" class="table table-striped dt-responsive display" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Articulo</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.A_ID)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                            <td>
                                                @Html.ActionLink("Editar", "Modificar", new { id = item.A_ID }) |                                              
                                                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.A_ID })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </section>
        </div>

    </section>
</section>


